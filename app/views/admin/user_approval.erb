<div class="Sign_Form">
<p>Admin Users</p>
<table>
  <tr>
    <th width="30%">Username</th>
  </tr>
  <% for user in @users %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to 'Approve', approve_user_path(user: user), :confirm => 'Are you sure?', :method => :match %></td>
        <!--TODO: przekierowanie do approvali, a nie do userow-->
        <td><%= link_to 'Cancel', user, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>
    </div>