<div class = "Sign_Form">
<p>Sign in</p>
<%= form_for @user, :as => :user, :url => sign_in_path(@user) do |f| %>
<p>
  <%= f.label 'login :' %> <br />
  <%= f.text_field :login %>
</p>
    <p>
      <%= f.label 'password :' %> <br />
    <%= f.password_field :password %>
    </p>
    <p>
      <%=f.check_box :remember_me %>
      <%= f.label 'Remember me' %> <br />
    </p>
    <p>
      <%= f.submit 'Sign In' %>&nbsp;
      <%= f.submit 'Clear Form', :type => 'reset' %>
    </p>
<%end%>
</div>